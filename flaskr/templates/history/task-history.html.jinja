<template id="task-history">
    <div id="no-tasks" class="d-none my-5">
        <p class="text-center">
            You have not completed any tasks.
        </p>
    </div>

    <div class="my-1">
        {% include "spinner.html.jinja" %}

        <table id="history-table" class="table table-hover d-none" aria-labelledby="history-heading"
            aria-describedby="history-description">
            <thead>
                <tr>
                    <th scope="col">Description</th>
                    <th scope="col" class="w-25 d-none d-sm-table-cell">Date Completed</th>
                    <th scope="col" class="w-10">Actions</th>
                </tr>
            </thead>
            <tbody id="history-table-body">
                {# Rows rendered dynamically #}
            </tbody>
        </table>
    </div>

    <nav id="history-nav" aria-label="History navigation">
        <ul class="pagination">
        </ul>
        <template id="page-item">
            <li class="page-item">
                <button class="page-link" type="button"></button>
            </li>
        </template>
    </nav>

    {% include "error-alert.html.jinja" %}
</template>