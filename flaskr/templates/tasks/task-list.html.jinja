<template id="task-list">
    <form>
        <div class="input-group my-3">
            <input type="text" name="description" id="description" class="form-control"
                placeholder="What do you want to do?" aria-label="What do you want to do?">
            <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-center"
                aria-label="Add task">
                {{ icon('plus-lg', classes=['flex-shrink-0'])}}
            </button>
        </div>
    </form>

    <hr class="my-4">

    {% include "spinner.html.jinja" %}

    <div id="no-tasks" class="d-none">
        <p class="text-center">
            You have nothing to do! Add a task using the above form.
        </p>
    </div>

    <ul id="tasks-list" class="list-group d-none"></ul>

    {% include "error-alert.html.jinja" %}
</template>